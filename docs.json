{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "almond",
    "name": "Fernand API Documentation",
    "interaction": {
        "drilldown": false
    },
    "styling": {
        "eyebrows": "breadcrumbs"
    },
    "custom": {
        "css": ["/custom.css"]
    },
    "colors": {
        "primary": "#00a0ff",
        "light": "#e8f5ff",
        "dark": "#00a0ff"
    },
    "favicon": "/favicon.svg",
    "api": {
        "mdx": {
            "server": "https://api.getfernand.com",
            "auth": {
                "method": "key",
                "name": "x-api-key"
            }
        },
        "playground": {
            "display": "interactive"
        },
        "examples": {
            "languages": ["curl", "python", "javascript", "php", "ruby", "go", "csharp", "java"],
            "defaults": "required"
        }
    },
    "navigation": {
        "pages": [
            "index",
            "docs/authentication",
            "docs/rate-limits",
            "docs/error-codes",
            "docs/openapi",
            {
                "group": "API Reference",
                "openapi": "./openapi.json",
                "pages": [
                    {
                        "group": "Conversations",
                        "pages": [
                            "POST /conversations/{conversation_id}/drafts"
                        ]
                    }
                ]
            }
        ]
    },
    "logo": {
        "light": "/logo/light.svg",
        "dark": "/logo/dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:support@getfernand.com"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Open app",
            "href": "https://app.getfernand.com"
        }
    },
    "contextual": {
        "options": [
            "copy",
            "view",
            "chatgpt",
            "claude",
            "perplexity",
            "mcp",
            "cursor",
            "vscode"
        ]
    },
    "footer": {
        "socials": {
            "x": "https://x.com/getfernand",
            "bluesky": "https://bsky.app/profile/getfernand.com"
        }
    }
}