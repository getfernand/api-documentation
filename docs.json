{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "almond",
    "name": "Fernand API Documentation",
    "interaction": {
        "drilldown": false
    },
    "styling": {
        "eyebrows": "breadcrumbs"
    },
    "custom": {
        "css": ["/custom.css"]
    },
    "colors": {
        "primary": "#00a0ff",
        "light": "#e8f5ff",
        "dark": "#00a0ff"
    },
    "favicon": "/favicon.svg",
    "api": {
        "mdx": {
            "server": "https://api.getfernand.com",
            "auth": {
                "method": "key",
                "name": "x-api-key"
            }
        },
        "playground": {
            "display": "interactive"
        },
        "examples": {
            "languages": ["curl", "python", "javascript", "php", "ruby", "go", "csharp", "java"],
            "defaults": "required"
        }
    },
